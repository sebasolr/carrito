<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Status</th>
      <th>Position</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each articulos}}
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src="{{this.url}}"
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
              />
          <div class="ms-3">
            <p class="fw-bold mb-1">{{this.producto}}</p>
            <p class="text-muted mb-0"{{this.precio}}</p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">{{this.codigo}}</p>
        <p class="text-muted mb-0">{{this.descripcion}}</p>
      </td>
      <td>
        <span class="badge badge-success rounded-pill d-inline">{{this.stock}}</span>
      </td>
      <td>{{this.date}}</td>
      <td>
        <button type="button" class="btn btn-link btn-sm btn-rounded">
          Edit
        </button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>